---
const links = [
  {
    website: "github.com",
    name: "matteotagliatti",
    link: "https://github.com/matteotagliatti",
  },
  {
    website: "linkedin.com",
    name: "matteotagliatti",
    link: "https://www.linkedin.com/in/matteotagliatti/",
  },
  {
    website: "instagram.com",
    name: "matteotagliatti",
    link: "https://www.instagram.com/matteotagliatti/",
  },
];
---

<footer>
  <h2 class="mb-6 text-xl text-neutral-500">Links</h2>
  <div class="flex flex-col flex-wrap gap-4 sm:gap-6 sm:flex-row">
    {
      links.map((link) => (
        <a
          href={link.link}
          target="_blank"
          rel="noopener noreferrer"
          class="w-fit rounded-full bg-neutral-200 py-1.5 px-4 hover:-translate-y-0.5 transition-transform"
        >
          {link.website}
          <span class="text-neutral-500">/{link.name}</span>
        </a>
      ))
    }
  </div>
</footer>
